<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="655dp"
            android:layout_height="760dp"
            android:layout_marginStart="-200dp"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="-200dp"
            android:layout_marginBottom="-50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img" />

        <ImageView
            android:id="@+id/hive"
            android:layout_width="225dp"
            android:layout_height="254dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_hive_svgrepo_com" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fly_button"
            style="@style/honeycomb_button"
            android:layout_marginTop="380dp"
            android:text="@string/fly"
            app:backgroundTint="@color/honeycomb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scale_button"
            style="@style/honeycomb_button"
            android:layout_width="133dp"
            android:layout_height="98dp"
            android:layout_marginStart="-220dp"
            android:layout_marginTop="408dp"
            android:text="Scale"
            app:backgroundTint="@color/honeycomb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.844"
            app:layout_constraintStart_toEndOf="@+id/fly_button"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rotate_button"
            style="@style/honeycomb_button"
            android:layout_width="133dp"
            android:layout_height="98dp"
            android:layout_marginTop="408dp"
            android:layout_marginEnd="-220dp"
            android:text="rotate"
            app:backgroundTint="@color/honeycomb"
            app:layout_constraintEnd_toStartOf="@+id/fly_button"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/translate_button"
            style="@style/honeycomb_button"
            android:layout_width="133dp"
            android:layout_height="98dp"
            android:layout_marginTop="494dp"
            android:layout_marginEnd="-230dp"
            android:text="translate"
            app:backgroundTint="@color/honeycomb"
            app:layout_constraintEnd_toEndOf="@+id/rotate_button"
            app:layout_constraintHorizontal_bias="0.201"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/alpha_button"
            style="@style/honeycomb_button"
            android:layout_width="133dp"
            android:layout_height="98dp"
            android:layout_marginStart="-220dp"
            android:layout_marginTop="494dp"
            android:text="alpha"
            app:backgroundTint="@color/honeycomb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.794"
            app:layout_constraintStart_toStartOf="@+id/scale_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/flower"
            android:layout_width="158dp"
            android:layout_height="226dp"
            android:layout_marginTop="136dp"
            android:rotation="300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.996"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_1" />

        <ImageView
            android:id="@+id/bee"
            android:layout_width="56dp"
            android:layout_height="51dp"
            android:layout_marginTop="132dp"
            android:contentDescription="@string/bee_image"
            app:layout_constraintEnd_toEndOf="@+id/hive"
            app:layout_constraintHorizontal_bias="0.609"
            app:layout_constraintStart_toStartOf="@+id/hive"
            app:layout_constraintTop_toTopOf="@+id/hive"
            app:srcCompat="@drawable/ic_bee_svgrepo_com__1_" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>
